package main

import (
	"fmt"
)

func main() {
	var salario float64

	fmt.Print("Digite o salário do funcionário: ")
	fmt.Scanln(&salario)

	var novoSalario float64

	if salario < 1000 {
		novoSalario = salario * 1.1
	} else {
		novoSalario = salario * 1.05
	}

	fmt.Printf("O novo salário é: R$ %.2f\n", novoSalario)
}
